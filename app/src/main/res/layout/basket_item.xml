<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/basket_item_product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Samsung S22"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/basket_item_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="12.000 tl"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/basket_count_decrease"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/basket_count_dec"
            android:gravity="center"
            android:text="-"
            android:textColor="#88000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/basket_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/basket_count"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/basket_count_increase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/basket_count_inc"
            android:gravity="center"
            android:text="+"
            android:textColor="#88000000"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>